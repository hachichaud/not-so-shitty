.team Meet the team !
  .team(
    layout="row"
  )
    .dev(flex)
      trello-avatar(
        ng-repeat="id in team.dev"
        member-id="{{id}}"
      )
    .rest(flex)
      trello-avatar(
        ng-repeat="id in team.rest"
        member-id="{{id}}"
      )
  .select-teams(
    layout="row"
  )
    .select-dev-team(flex)
      p Select the dev team
      select-people(
        members="boardMembers"
        selected-members="team.dev"
      )
    .select-rest-team(flex)
      p Select the rest of the team
      select-people(
        members="boardMembers"
        selected-members="team.rest"
      )

.days Choose your sprint's start and end dates
  p Format is YYYY-MM-DD
  label
    span Start day
    input(
      type="text"
      ng-model="dates.start"
      ng-pattern="datePattern"
    )
  label
    span End day
    input(
      type="text"
      ng-pattern="datePattern"
      ng-model="dates.end"
    )
.man-days(
  ng-if="dates.days"
) TOTAL MAN-DAYS : {{ resources.totalManDays }}
  p Man-days/Day/Man
  resources-by-day(
    days="dates.days"
    matrix="resources.matrix"
    members="team.dev"
  )

.sprint-points
  label
    span Total sprint points
    input(
      type="number"
      min="1"
      step="1"
      ng-model="resources.totalPoints"
    )
.sprint-speed
  label
    span Sprint speed
    input(
      type="number"
      min="0"
      step="0.1"
      ng-model="resources.speed"
    )
