.dev-team
  p Select the dev team
  select(
    ng-options="member.id as member.fullName for member in boardMembers"
    multiple="true"
    ng-model="team.dev"
  )
.days Choose your sprint's start and end dates
  p Format is YYYY-MM-DD
  label
    span Start day
    input(
      type="text"
      ng-model="dates.start"
      ng-pattern="datePattern"
    )
  label
    span End day
    input(
      type="text"
      ng-pattern="datePattern"
      ng-model="dates.end"
    )
.man-days(
  ng-if="dates.days"
) TOTAL MAN-DAYS : {{ resources.totalManDays }}
  p Man-days/Day/Man
  resources-by-day(
    days="dates.days"
    matrix="resources.matrix"
    members="team.dev"
  )

.sprint-points
  label
    span Total sprint points
    input(
      type="number"
      min="1"
      step="1"
      ng-model="resources.totalPoints"
    )
.sprint-speed
  label
    span Sprint speed
    input(
      type="number"
      min="0"
      step="0.1"
      ng-model="resources.speed"
    )
