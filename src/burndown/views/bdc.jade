h1 Burn Down Chart
md-card
  h4 Save and share !
  md-content(
    layout="row"
  )
    form
      md-text-float(
        label="Enter card id to save to :"
        name="card id"
        ng-model="user.trelloCardId"
      )
      md-button.md-raised.md-primary(
        ng-click="saveToTrello()"
      ) Save Board to Trello
    
    md-content.share-link(
      ng-if="trelloShareLink"
      flex
    ) Share link : 
      input(
        type="text"
        ng-model="trelloShareLink"
      )

md-toolbar(
  md-theme="blue"
)
  .md-toolbar-tools
    h3 SCRUM BOOAOAOAOAARD

    md-button(
      ui-sref="burndown.board"
    ) Go !
md-content.md-padding
  .scrum-board(
    ui-view
  )
    

md-toolbar
  .md-toolbar-tools
    h3 Burn Down 4 WAT ?
    md-button(
      ng-click="toggleDayPlusOne()"
    ) Toggle D+1
md-content.md-padding
  bdcgraph(data="graphData")
