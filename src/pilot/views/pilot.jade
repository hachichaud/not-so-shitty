md-toolbar.page-header.md-whiteframe-z1.md-hue-3.md-primary
  .md-toolbar-tools
    h1 Lucien's wonderful page
    
.container(
  layout-gt-lg="row"
  layout="column"
  layout-fill
  layout-align-gt-lg="center start"
  layout-align="center center"
    
)
  md-button.md-fab.md-hue-3.main-button(
    aria-label="Gogo pilot"
    md-theme="blue"
  )
    i.fa.fa-cog

  .setup-pilot(
    flex
    layout="column"
    layout-align="space-around center"
  )
    md-toolbar
      .md-toolbar-tools
        h4 Setup 
    .md-whiteframe-z2      
      div.choose-board(
        ng-repeat="board in pilotSetup.boards track by $index"
      )
        select-board(
          boards="boards"
          board-id="board.id"
        )
      md-button(
        ng-click="addBoard()"
      ) +
  .results-pilot(
    flex
    layout="column"
  )
    md-toolbar
      .md-toolbar-tools
        h4 Nombre de retours et r√©gressions
    md-content.md-whiteframe-z2
      md-list
        md-item(ng-repeat="board in pilotSetup.boards track by $index")
          md-item-content
            .md-tile-left
              trello-board(
                board-id="{{board.id}}"
              )
            .md-tile-content
              h3 Retours : {{board.retours}}
              p (/{{board.numRetourCards}}) 
              h3 Regressions : {{board.regressions}}
